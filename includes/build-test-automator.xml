<?xml version="1.0"?>
<!DOCTYPE project>

<project name="build-test-automator" basedir="..">
	<description>
		Tests for automator
	</description>

	<import file="../build.xml" />
	
	<target name="test-common">
		<echo>hostname =  ${hostname}</echo>
		<echo>user.name = ${user.name}</echo>
		
		<echo>automator.dir = ${automator.dir}</echo>
		
		<echo>automator.dir.libs = ${automator.dir.libs}</echo>
		<echo>automator.dir.modules = ${automator.dir.modules}</echo>
		<echo>automator.dir.env = ${automator.dir.environment}</echo>
		<echo>automator.dir.project = ${automator.dir.project}</echo>
	</target>
	

	<target name="test-environment-properties">
		<echo>system.base.dir = ${system.base.dir}</echo>
	</target>

	
	<target name="test-system-properties">
		<echo>system.name = ${system.name}</echo>
		
		<echo>system.modules = ${system.modules}</echo>
	</target>

</project>