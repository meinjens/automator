<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>

<project name="automator.module.tomcat_7">

	<!-- - - - - - - - - - - - - - - - - - 
          target: static properties                      
         - - - - - - - - - - - - - - - - - -->
	<property name="module.tomcat_7.dir" value="${automator.dir}/modules/tomcat_7" />
	
	
	<!-- - - - - - - - - - - - - - - - - - 
          target: module-init                      
         - - - - - - - - - - - - - - - - - -->
    <target name="module-init">
    	<property file="${module.tomcat_7.dir}/module.properties" />

    	<property name="module.tomcat_7.build.dir" value="${module.tomcat_7.dir}/${automator.module.build.dir}" />
    	<property name="module.tomcat_7.download.dir" value="${module.tomcat_7.dir}/${automator.module.download.dir}" />
    	<property name="module.tomcat_7.diff.dir" value="${module.tomcat_7.dir}/${automator.module.diff.dir}" />
    	
    	<mkdir dir="${module.tomcat_7.build.dir}" />
    </target>

	
	<!-- ================================= 
          target: module-clean              
         ================================= -->
    <target name="module-clean" depends="module-init" description="Clean temporary files for the module">
    	<delete dir="${module.tomcat_7.build.dir}" includeemptydirs="true" />
    </target>
	
	
	<!-- ================================= 
          target: module-build              
         ================================= -->
    <target name="module-build" depends="module-init" description="Build module">
    	<antcall target="download-prerequisites" inheritrefs="true" />
    	<antcall target="unzip-package" inheritrefs="true" />
    	<antcall target="copy-additional-files" inheritrefs="true" />
    </target>
	
	
	<!-- ================================= 
          target: module-show-properties              
         ================================= -->
    <target name="module-show-properties" depends="module-init" description="description">
    	<echoproperties prefix="module.tomcat_7"></echoproperties>
    </target>
	
	
	<!-- - - - - - - - - - - - - - - - - - 
          target: download-prerequisites                     
         - - - - - - - - - - - - - - - - - -->
    <target name="download-prerequisites" depends="module-init" description="Download prerequisites from the internet">
    	<delete dir="${module.tomcat_7.download.dir}" includeemptydirs="true" />
    	<mkdir dir="${module.tomcat_7.download.dir}" />
    	
    	<get dest="${module.tomcat_7.download.dir}" src="${module.tomcat_7.download.url}" />
    </target>

	
	<!-- - - - - - - - - - - - - - - - - - 
          target: unzip-package                      
         - - - - - - - - - - - - - - - - - -->
    <target name="unzip-package">
    	<unzip dest="${module.tomcat_7.build.dir}">
    		<fileset dir="${module.tomcat_7.download.dir}" includes="*.zip" />
    		<cutdirsmapper dirs="1"/>
    		<patternset>
    		    <exclude name="**/webapps/"/>
		    </patternset>  		
    	</unzip>
    </target>
	
	
	<!-- - - - - - - - - - - - - - - - - - 
          target: copy-module-files                      
         - - - - - - - - - - - - - - - - - -->
    <target name="copy-additional-files">
    	<echo>Copying binary files...</echo>
		<copy todir="${module.tomcat_7.build.dir}" overwrite="true" includeemptydirs="false">
			<fileset dir="${module.tomcat_7.diff.dir}" excludes="${module.tomcat_7.config.files}" />
		</copy>
    	
    	<echo>Copying configuration files...</echo>
		<copy todir="${module.tomcat_7.build.dir}" includeemptydirs="true" overwrite="true">
			<fileset dir="${module.tomcat_7.diff.dir}" includes="${module.tomcat_7.config.files}" />
			<filterset>
				<filtersfile file="${automator.dir}/${module.tomcat_7.dir}/module.properties" />
			</filterset>
			<filterset refid="filter.all" />
		</copy>            
    </target>
	
</project>