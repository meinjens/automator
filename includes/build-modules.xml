<?xml version="1.0"?>
<!DOCTYPE project>

<project name="build-modules">
	
	<!-- - - - - - - - - - - - - - - - - - 
          Static properties
         - - - - - - - - - - - - - - - - - -->
	<property name="automator.module.build.dir" value="build" />
	<property name="automator.module.download.dir" value="download" />
	<property name="automator.module.diff.dir" value="_diff" />
	
	<!-- ================================= 
          target: clean              
         ================================= -->
    <target name="clean" description="Clean all modules">
		<antcall target="loop-modules" inheritrefs="true">
			<param name="loop.modules.cmd" value="module-clean" />
		</antcall>
    </target>

	
	<!-- ================================= 
          target: prepare              
         ================================= -->
    <target name="prepare" description="Initialize all modules">
		<antcall target="loop-modules" inheritrefs="true">
			<param name="loop.modules.cmd" value="module-prepare" />
		</antcall>
    </target>
	
	
	<!-- ================================= 
          target: download-prerequisites
         ================================= -->
    <target name="download-prerequisites" description="Download prerequisites for all modules">
		<antcall target="loop-modules" inheritrefs="true">
			<param name="loop.modules.cmd" value="module-download-prerequisites" />
		</antcall>
    </target>
	
	
	<!-- ================================= 
          target: build step
         ================================= -->
    <target name="build" description="Build all modules">
		<antcall target="loop-modules" inheritrefs="true">
			<param name="loop.modules.cmd" value="module-build" />
		</antcall>
    </target>
	
	
	<!-- ================================= 
          target: show-module-properties
         ================================= -->
    <target name="show-module-properties" description="Display properties of all modules">
		<antcall target="loop-modules" inheritrefs="true">
			<param name="loop.modules.cmd" value="module-show-properties" />
		</antcall>
    </target>
	
	
	<!-- - - - - - - - - - - - - - - - - - 
          target: loop-modules                      
         - - - - - - - - - - - - - - - - - -->
    <target name="loop-modules">
    	<for param="module" list="${system.modules}">
    		<sequential>
				<echo>Executing module @{module} with target ${loop.modules.cmd}.</echo>
				<ant antfile="${automator.dir}/modules/@{module}/build-module.xml" target="${loop.modules.cmd}" inheritrefs="true" />
    		</sequential> 
    	</for>
    </target>

</project>